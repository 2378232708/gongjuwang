page {
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  color: #757575;
}

.preview-image,
.select-image {
  display: block;
  box-sizing: border-box;
  width: 210rpx;
  height: 210rpx;
  overflow: hidden;
  margin-top: 30rpx;
  margin-left: 30rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, .2);
  float: left;
  position: relative;
}

.select-image {
  color: #fff;
  text-align: center;
  line-height: 210rpx;
  font-size: 160rpx;
  background-color: rgba(0, 0, 0, .2);
}


.remove {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 30rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-shadow: -4rpx 4rpx 10rpx rgba(0, 0, 0, .2);
  border-bottom-left-radius: 16rpx;
  background-color: rgba(0, 0, 0, .4);
}

.bottom-tab,
.remove {
  overflow: hidden;
  box-sizing: border-box;
  color: #fff;
  text-align: center;
}

.bottom-tab {
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  font-size: 30rpx;
  width: 750rpx;
  box-shadow: 0rpx -4rpx 10rpx rgba(0, 0, 0, .2);
}

.tabBtn {
  width: 375rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
  background-color: #0081ff;
}


.select-image-hover:active {
  background-color: rgba(209, 209, 209, 0.4);
}
.tabBtn:active{
  background-color: #0063c7;
}