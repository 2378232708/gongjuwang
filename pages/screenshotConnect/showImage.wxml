<view class="bg">
  <view hidden="{{hidden}}" style="opacity:0;">
    <canvas canvasId="draw" style="width:{{canvasWidth}}px;height:{{canvasHeight}}px"></canvas>
  </view>
  <view style="height:65vh;" class="padding">
    <image bindtap="previewImage" class="image" mode="aspectFit" src="{{showImage.url}}" style="height:100%;"></image>
  </view>
  <view class="flex flex-direction">
    <button bindtap="save" style="background-color: #0081ff; color: #fff;  width: 80%; margin: 0 auto;">保存到相册</button>
  </view>
  <view class="iconfont back" bindtap="back"></view>
</view>