.cnt {
    height: 100%;
}

.search-bar {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 148rpx;
    background-color: #fff;
    box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
    z-index: 999;
}

.search-input {
    box-sizing: border-box;
    padding-left: 40rpx;
    width: 720rpx;
    height: 88rpx;
    border-radius: 100rpx;
    background-color: #efefef;
    font-size: 36rpx;
    line-height: 70rpx;
    color: #666;
}

.kind-item {
    position: relative;
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: #333;
    font-size: 48rpx;
    line-height: 100rpx;
    width: 100%;
    height: 100rpx;
}

.kind-item text {
    position: absolute;
    right: 50rpx;
    top: 30rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #bbb;
}

.kind-item:nth-child(even) {
    background-color: #f8f8f8;
}

.kind-detail-mod {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 60rpx 100rpx;
    color: #fff;
    border-radius: 10rpx;
    background: linear-gradient(135deg,#79c26f,#43994d);
    text-align: center;
    animation: scale .2s;
    font-size: 40rpx;
    font-weight: 700;
}

.kind-detail-mod image {
    width: 200rpx;
    height: 200rpx;
}

.current-name {
    margin-bottom: 20rpx;
    font-size: 50rpx;
}

.kind1-info,.kind-detail-mod.kind1 {
    background: linear-gradient(135deg,#8ed884,#5ec26a);
}

.kind2-info,.kind-detail-mod.kind2 {
    background: linear-gradient(135deg,#ecd361,#ffd20a);
}

.kind3-info,.kind-detail-mod.kind3 {
    background: linear-gradient(135deg,#9dc8fb,#528de1);
}

.kind4-info,.kind-detail-mod.kind4 {
    background: linear-gradient(135deg,#ff8b6e,#da5b74);
}
.mask-mod{
  position: fixed;
  z-index: 99999;
  width: 100%;
  top: 0;
}