page {
    height: 100%;
    font-family: Arial,Helvetica,Microsoft Yahei;
    font-size: 28rpx;
    overflow: hidden;
}

.container {
    background: #333;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
}

.container,.row {
    width: 100%;
    height: 100%;
    display: flex;
    box-sizing: border-box;
}

.row {
    flex: 1;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: space-between;
}

.row2 {
    flex: 2;
}

.col {
    width: 25%;
    flex: 1;
    flex-direction: column;
    justify-content: space-between;
    align-items: space-between;
    box-sizing: border-box;
}

.col,.panel navigator,button {
    display: flex;
}

.panel navigator,button {
    position: relative;
    background: transparent;
    border: 1rpx solid #444;
    border-right: none;
    border-bottom: none;
    border-radius: 0;
    font-family: Arial,Helvetica,Microsoft Yahei;
    font-size: 42rpx;
    color: hsla(0,0%,100%,.9);
    flex: 1;
    align-items: center;
    justify-content: center;
    text-align: center;
    vertical-align: middle;
}

switch {
    zoom: .7;
    opacity: .95;
    margin: 0 6rpx 0 16rpx;
}

switch,text {
    vertical-align: middle;
}

.screen {
    width: 100%;
    height: 40%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: space-between;
}

.screen .tip {
    width: 100%;
    padding: 0 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #bbb;
}

.screen .input,.screen .output {
    width: 100%;
    padding: 0 30rpx 30px 20rpx;
    text-align: right;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.screen .input {
    flex: 2;
    font-size: 32rpx;
    color: #bbb;
}

.screen .output {
    flex: 3;
    font-size: 42rpx;
    color: #fff;
}

.screen .setting {
    width: 100%;
    padding: 0 30rpx;
    height: 80rpx;
    background: rgba(0,0,0,.15);
    line-height: 78rpx;
    color: hsla(0,0%,100%,.9);
}

.panel {
    width: 100%;
    height: 60%;
}

.panel button[disabled] {
    background: transparent;
    color: hsla(0,0%,100%,.3);
}

.panel .button-hover {
    background-color: rgba(0,0,0,.1);
    color: hsla(0,0%,100%,.8);
}

.panel .btn-first {
    border-left: none;
}

.panel .btn-equal {
    background: #e7763e;
}

.panel .btn-equal-hover {
    background: #e66747;
}

.panel .btn-active {
    background-color: rgba(0,0,0,.2);
    color: hsla(0,0%,100%,.7);
}